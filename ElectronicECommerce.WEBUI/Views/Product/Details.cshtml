<section class="related_product_area">
    <div class="container">
        <div class="related_product_inner">
            <h2 class="single_c_title">İlgili Ürünler</h2>
            <div class="row">
                @foreach (Product item in Model.relatedProducts)
                {
                    <div class="col-lg-3 col-sm-6">
                        <div class="l_product_item">
                            <div class="l_p_img">
                                <img class="img-fluid" src="@item.Pictures.FirstOrDefault(f=>f.PIndex==1).PLastSliderPath" alt="@item.Name">
                            </div>
                            <div class="l_p_text">
                                <ul>
                                    <li class="p_icon"><a href="@Url.Action("Details","Product",new { ID = item.ID})"><i class="icon_piechart"></i></a></li>
                                    <li><a class="add_cart_btn" href="#">Sepete Ekle</a></li>
                                    <li class="p_icon"><a href="#"><i class="icon_heart_alt"></i></a></li>
                                </ul>
                                <h4>@item.Name</h4>
                                <h5>@item.Price TL</h5>
