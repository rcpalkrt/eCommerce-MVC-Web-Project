@using ElectronicECommerce.WEBUI.ViewModels;
@using ElectronicECommerce.BOL.Entities
@model ProductVM
@{
    string[] detailPath = new string[4];
    string[] sliderPath = new string[4];

    for (int i = 1; i <= Model.detailProduct.Pictures.Count; i++)
    {
        detailPath[i - 1] = Model.detailProduct.Pictures.FirstOrDefault(f => f.PIndex == i).PDetailPath;
        sliderPath[i - 1] = Model.detailProduct.Pictures.FirstOrDefault(f => f.PIndex == i).PLastSliderPath;
    }
}

<!--================Categories Banner Area =================-->
<section class="categories_banner_area">
    <div class="container">
        <div class="c_banner_inner">
            <h3>Ürün Detayı</h3>
            <ul>
                <li><a href="/">Anasayfa</a></li>
                <li><a href="@Url.Action("Categories","Product")">Tüm Ürünler</a></li>
                <li><a href="">@Model.detailProduct.Name</a></li>
            </ul>
        </div>
    </div>
</section>
<!--================End Categories Banner Area =================-->
